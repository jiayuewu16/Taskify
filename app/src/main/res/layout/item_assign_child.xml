<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

<CheckBox
        android:id="@+id/checkBoxAssignChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <ImageView
        android:id="@+id/imageViewProfilePhoto"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/checkBoxAssignChild"
        app:srcCompat="@drawable/ic_baseline_person_24"
        android:contentDescription="@string/content_description_profile_photo" />

    <TextView
        android:id="@+id/textViewFullUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imageViewProfilePhoto"
        tools:text="Manny Pearson @mannypearson001"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>